<div class="container mx-auto" style="width: 500px;">
  <h2 class="text-center display-3 mt-4">Create</h2>
  <h5 class="text-center mb-4" style="color:rgb(240, 150, 128);">* Required</h5>
  <form action='/create' method="POST">
    <div class="form-group row mb-4">
      <label for="example-text-input" class="col-2 col-form-label">Name*</label>
      <div class="col-10">
        <input class="form-control" type="text" placeholder="Name" id="example-text-input" value="{{record.name}}"
          name="name" required>
      </div>
    </div>
    <div class="form-group row mb-4">
      <label for="exampleSelect1" class="col-2 col-form-label">Category*</label>
      <div class="col-10">
        <select class="form-control" id="exampleSelect1" style="cursor: pointer" name="category_id" required>
          <option value="" disabled selected>Category</option>
          {{#each categories}}
          <option value="{{this.category_id}}">
            {{this.categoryName}}</option>
          {{/each}}
        </select>
      </div>
    </div>
    <div class="form-group row mb-4">
      <label for="exampleSelect1" class="col-2 col-form-label">Merchandise</label>
      <div class="col-10">
        <input class="form-control" type="text" placeholder="Merchandise" id="example-text-input"
          value="{{record.merchandise}}" name="merchandise">
      </div>
    </div>
    <div class="form-group input-group row mb-4">
      <label for="example-date-input" class="col-2 col-form-label mr-4">Date*</label>
      <div class="input-group-prepend">
        <span class="input-group-text" style="width: 40px;"><i class=" far fa-calendar-alt"></i></span>
      </div>
      <input class="form-control col-5" type="date" id="example-date-input" style="cursor: pointer" value="{{today}}"
        name='date' max="{{today}}" required>
      <span class="datepicker_label" style="pointer-events: none;"></span>
    </div>
    <div class="form-group input-group row mb-4">
      <label for="example-number-input" class="col-2 col-form-label mr-4">Amount*</label>
      <div class="input-group-prepend">
        <span class="input-group-text" style="width: 40px"><i class="fas fa-dollar-sign"></i></span>
      </div>
      <input class=" form-control col-5" type="number" placeholder="100" id="example-number-input" value=""
        name="amount" min="0" required>
    </div>
    <div class="text-center mt-4 row">
      <div class="col-5"></div>
      <div class="col-3"><button type="submit" class="btn btn-info">Create</button></div>
      <div class="col-2"></div>

    </div>
  </form>
</div>