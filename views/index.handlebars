<div class="container mt-5">
  <div class="flex-column">
    <!-- total expense-->

    <div class="row mb-3">
      <div class="col-lg-4 col-4">
        <div class="card h-70">
          <div class="card-body d-flex align-items-center">
            <i class="far fa-money-bill-alt fa-3x text-secondary d-none d-sm-block"></i>
            <div class="text-center w-100">
              <div class="h5">Total</div>
              <div class="h3">$ {{sumOfamount}}</div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-lg-4 col-4">
        <div class="card h-70">
          <div class="card-body d-flex align-items-center">
            <i class="fas fa-pen-square fa-3x text-secondary d-none d-sm-block"></i>
            <div class="text-center w-100">
              <div class="h5">Count</div>
              <div class="h3">{{sumOfcount}}</div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-lg-4 col-4">
        <div class="card h-70">
          <div class="card-body d-flex align-items-center">

            <i class="fas fa-percentage fa-3x text-secondary d-none d-sm-block"></i>
            <div class="text-center w-100">
              <div class="h5">Percentage</div>
              <div class="h3">{{percent}} %</div>
            </div>
          </div>
        </div>
      </div>
    </div>

    {{!-- create and filter --}}
    <div class="row mb-3 ml-1 mr-3 justify-content-end">
      <form class="form mr-3" action="/create" method="GET">
        <button class="btn btn-info" type="submit">Create</button>
      </form>
      <form action="/" method="GET">
        <select class="form-control" style="cursor: pointer" name="category_id" onchange="this.form.submit()">
          <option value="" disabled selected>Category</option>
          {{#each categories}}
          <option value="{{this.category_id}}" {{#if isSelected}} selected{{/if}}>
            {{this.categoryName}}</option>
          {{/each}}
        </select>
      </form>
    </div>

    <ul class="list-group">
      {{#each records}}
      <li class="list-group-item">
        <div class="list-box row d-flex justify-content-between align-items-center">
          <div class="list-info col-auto d-flex align-items-center flex-grow-1">
            <div class="list-icon mr-5">
              <i class="{{this.categoryInfo.categoryIcon}} fa-3x"></i>
            </div>
            <div class="list-text flex-grow-1 mx-2">
              <p class="item">{{this.name}}</p>
              <p class="date">{{this.date}}</p>
            </div>
            <div class="list-expense">
              {{this.amount}}
            </div>
          </div>
          <div class="list-button col-auto">
            <a class="btn edit-button" href="/record/{{this._id}}">
              <i class="fas fa-edit fa-ml"></i>
            </a>
          </div>
          <div class="list-button col-auto">
            <form action="./record/{{this._id}}?_method=DELETE" method="post" style="display: inline;">
              <button type="submit" class="delete fas fa-trash fa-ml" style="border: none;"></button>
            </form>
          </div>

      </li>
      {{/each}}
    </ul>

  </div>
</div>